{
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },

  "env": {
    "es6": true,
    "node": true,
    "jquery": true,
    "mocha": true
  },

  "plugins": [
    "import",
    "node",
    "promise",
    "standard",
    "chai-friendly"
  ],

  "globals": {
    "document": false,
    "navigator": false,
    "window": false
  },

  "rules": {
    "accessor-pairs": "error",
    "arrow-spacing": [1, { "before": true, "after": true }],
    "block-spacing": [1, "always"],
    "brace-style": [1, "1tbs", { "allowSingleLine": true }],
    "camelcase": [1, { "properties": "never" }],
    "comma-dangle": [1, {
      "arrays": "never",
      "objects": "never",
      "imports": "never",
      "exports": "never",
      "functions": "never"
    }],
    "comma-spacing": [1, { "before": false, "after": true }],
    "comma-style": [1, "last"],
    "constructor-super": "warning",
    "curly": [1, "multi-line"],
    "dot-location": [1, "property"],
    "eol-last": "warning",
    "eqeqeq": [1, "always", { "null": "ignore" }],
    "func-call-spacing": [1, "never"],
    "generator-star-spacing": [1, { "before": true, "after": true }],
    "handle-callback-err": [1, "^(err|warning)$" ],
    "indent": [1, 2, {
      "SwitchCase": 1,
      "VariableDeclarator": 1,
      "outerIIFEBody": 1,
      "MemberExpression": 1,
      "FunctionDeclaration": { "parameters": 1, "body": 1 },
      "FunctionExpression": { "parameters": 1, "body": 1 },
      "CallExpression": { "arguments": 1 },
      "ArrayExpression": 1,
      "ObjectExpression": 1,
      "ImportDeclaration": 1,
      "flatTernaryExpressions": false,
      "ignoreComments": false
    }],
    "key-spacing": [1, { "beforeColon": false, "afterColon": true }],
    "keyword-spacing": [1, { "before": true, "after": true }],
    "new-cap": [1, { "newIsCap": true, "capIsNew": false }],
    "new-parens": "warning",
    "no-array-constructor": "warning",
    "no-caller": "warning",
    "no-class-assign": "warning",
    "no-compare-neg-zero": "warning",
    "no-cond-assign": "warning",
    "no-const-assign": "warning",
    "no-constant-condition": [1, { "checkLoops": false }],
    "no-control-regex": "warning",
    "no-debugger": "warning",
    "no-delete-var": "warning",
    "no-dupe-args": "warning",
    "no-dupe-class-members": "warning",
    "no-dupe-keys": "warning",
    "no-duplicate-case": "warning",
    "no-empty-character-class": "warning",
    "no-empty-pattern": "warning",
    "no-eval": "warning",
    "no-ex-assign": "warning",
    "no-extend-native": "warning",
    "no-extra-bind": "warning",
    "no-extra-boolean-cast": "warning",
    "no-extra-parens": [1, "functions"],
    "no-fallthrough": "warning",
    "no-floating-decimal": "warning",
    "no-func-assign": "warning",
    "no-global-assign": "warning",
    "no-implied-eval": "warning",
    "no-inner-declarations": [1, "functions"],
    "no-invalid-regexp": "warning",
    "no-irregular-whitespace": "warning",
    "no-iterator": "warning",
    "no-label-var": "warning",
    "no-labels": [1, { "allowLoop": false, "allowSwitch": false }],
    "no-lone-blocks": "warning",
    "no-mixed-operators": [1, {
      "groups": [
        ["==", "!=", "===", "!==", ">", ">=", "<", "<="],
        ["&&", "||"],
        ["in", "instanceof"]
      ],
      "allowSamePrecedence": true
    }],
    "no-mixed-spaces-and-tabs": "warning",
    "no-multi-spaces": "warning",
    "no-multi-str": "warning",
    "no-multiple-empty-lines": [1, { "max": 1, "maxEOF": 0 }],
    "no-negated-in-lhs": "warning",
    "no-new": "warning",
    "no-new-func": "warning",
    "no-new-object": "warning",
    "no-new-require": "warning",
    "no-new-symbol": "warning",
    "no-new-wrappers": "warning",
    "no-obj-calls": "warning",
    "no-octal": "warning",
    "no-octal-escape": "warning",
    "no-path-concat": "warning",
    "no-proto": "warning",
    "no-redeclare": "warning",
    "no-regex-spaces": "warning",
    "no-return-assign": [1, "except-parens"],
    "no-return-await": "warning",
    "no-self-assign": "warning",
    "no-self-compare": "warning",
    "no-sequences": "warning",
    "no-shadow-restricted-names": "warning",
    "no-sparse-arrays": "warning",
    "no-tabs": "warning",
    "no-template-curly-in-string": "warning",
    "no-this-before-super": "warning",
    "no-throw-literal": "warning",
    "no-trailing-spaces": "warning",
    "no-undef": "warning",
    "no-undef-init": "warning",
    "no-unexpected-multiline": "warning",
    "no-unmodified-loop-condition": "warning",
    "no-unneeded-ternary": [1, { "defaultAssignment": false }],
    "no-unreachable": "warning",
    "no-unsafe-finally": "warning",
    "no-unsafe-negation": "warning",
    "no-unused-expressions": [1, { "allowShortCircuit": true, "allowTernary": true, "allowTaggedTemplates": true }],
    "no-unused-vars": [1, { "vars": "all", "args": "none", "ignoreRestSiblings": true }],
    "no-use-before-define": [1, { "functions": false, "classes": false, "variables": false }],
    "no-useless-call": "warning",
    "no-useless-computed-key": "warning",
    "no-useless-constructor": "warning",
    "no-useless-escape": "warning",
    "no-useless-rename": "warning",
    "no-useless-return": "warning",
    "no-whitespace-before-property": "warning",
    "no-with": "warning",
    "object-curly-spacing": [1, "always"],
    "object-property-newline": [1, { "allowMultiplePropertiesPerLine": true }],
    "one-var": [1, { "initialized": "never" }],
    "operator-linebreak": [1, "after", { "overrides": { "?": "before", ":": "before" } }],
    "padded-blocks": [1, { "blocks": "never", "switches": "never", "classes": "never" }],
    "prefer-promise-reject-warnings": "warning",
    "quotes": [1, "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "rest-spread-spacing": [1, "never"],
    "semi": [1, "always"],
    "semi-spacing": [1, { "before": false, "after": true }],
    "space-before-blocks": [1, "always"],
    "space-before-function-paren": [1, "always"],
    "space-in-parens": [1, "never"],
    "space-infix-ops": "warning",
    "space-unary-ops": [1, { "words": true, "nonwords": false }],
    "spaced-comment": [1, "always", {
      "line": { "markers": ["*package", "!", "/", ",", "="] },
      "block": { "balanced": true, "markers": ["*package", "!", ",", ":", "::", "flow-include"], "exceptions": ["*"] }
    }],
    "symbol-description": "warning",
    "template-curly-spacing": [1, "never"],
    "template-tag-spacing": [1, "never"],
    "unicode-bom": [1, "never"],
    "use-isnan": "warning",
    "valid-typeof": [1, { "requireStringLiterals": true }],
    "wrap-iife": [1, "any", { "functionPrototypeMethods": true }],
    "yield-star-spacing": [1, "both"],
    "yoda": [1, "never"],

    "import/export": "warning",
    "import/first": "warning",
    "import/no-duplicates": "warning",
    "import/no-named-default": "warning",
    "import/no-webpack-loader-syntax": "warning",

    "node/no-deprecated-api": "warning",
    "node/process-exit-as-throw": "warning",

    "promise/param-names": "warning",

    "standard/array-bracket-even-spacing": [1, "either"],
    "standard/computed-property-even-spacing": [1, "even"],
    "standard/no-callback-literal": "warning",
    "standard/object-curly-even-spacing": [1, "either"]
  }
}