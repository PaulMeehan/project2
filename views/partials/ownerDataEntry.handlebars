<h1>Store Inventory</h1>

<ul>
{{#each item }}
  <li>
    <p>ID: {{id}}</p>
    <p>Item: {{itemName}}</p>
    <p>Category: {{category}}</p>
    <p>Price: {{price}}</p>
  <li>

	<button class="updateItem" data-id="{{id}}" data-updateItem=""="{{update}}"></button>

	<button class="deleteItem" data-id="{{this.id}}">DELETE!</button>
{{/each}}

<h2>Add an item</h2>

<div class = "container">
    <form>
        <div class="form-group">
            <label for="enter item name">Enter item Name</label>
            <input type="text" class="form-control" id="itemName" placeholder="enter item name">
        </div>
        <div class="form-group">
            <label for="price">Enter item price</label>
            <input type="text" class="form-control" id="price" placeholder="enter item price">
        </div>
         <div class="form-group">
            <label for="itemDescription">Enter item description</label>
            <input type="text" class="form-control" id="itemDescription" placeholder="enter item description">
        </div>
        <div class="form-group">
            <label for="itemDescription">Enter item category</label>
            <input type="text" class="form-control" id="itemCategory" placeholder="enter item category">
        </div>
        <button class="btn btn-primary newItem" type="submit">Save Item</button>
    </form>
</div>